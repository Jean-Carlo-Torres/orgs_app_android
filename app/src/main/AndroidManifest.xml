<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.Orgs"
            tools:targetApi="31">
        <activity
                android:name=".ui.activity.SplashActivity"
                android:exported="true"
                android:theme="@style/Theme.Orgs.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".ui.activity.ListaProdutosActivity"
                android:exported="true"/>
        <activity
                android:name=".ui.activity.LoginActivity"
                android:theme="@style/Theme.Orgs.NoActionBar">
        </activity>
        <activity
                android:name=".ui.activity.FormularioCadastroUsuarioActivity"
                android:exported="true"
                android:label="@string/text_cadastrar_usuario"
                android:theme="@style/Theme.Orgs">
        </activity>
        <activity
                android:name=".ui.activity.DetalhesProdutoActivity"/>
        <activity
                android:name=".ui.activity.FormularioProdutoActivity"
                android:label="@string/text_cadastrar_produto"
                android:theme="@style/Theme.Orgs"/>
        <activity android:name=".ui.activity.PerfilUsuarioActivity"
                  android:label="@string/text_perfil"/>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>